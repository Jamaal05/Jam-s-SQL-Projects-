////// SQL Query Code //////

-- Query #1 (Select the departments which the sum of it's salaries are atleast 300k)

SELECT department, SUM (salary) AS salary
FROM employees
GROUP BY department
HAVING SUM (salary) >= 300000;



-- Query #2 (Select the departments that have an average pay of atleast 70k)

SELECT department, AVG (salary) AS avg_salary 
FROM employees
GROUP BY department
HAVING avg_salary >= 70000;


-- Query #3 (Select the departments that have an average pay of atleast 50k)

SELECT department, AVG (salary) AS avg_salary 
FROM employees
GROUP BY department
HAVING avg_salary >= 50000;
